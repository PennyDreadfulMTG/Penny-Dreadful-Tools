    "version": "0.2.0",
    "configurations": [
    {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}"
    },
        {
            "name": "Run: Rotation",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "rotation"
            ]
        },
        {
            "name": "Run: Init Cards",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "init-cards"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Run: Decksite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_decksite.py"
        },
        {
            "name": "Run: Modo Bugs",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "modo-bugs"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Run: Discordbot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "discordbot"
            ],
            "stopOnEntry": true
        },
        {
            "name": "Dev: Linter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dev.py",
            "args": [
                "lint"
            ]
        },
        {
            "name": "Run: Current Module",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "${fileDirname}"
            ]
        }
    ]
}
