{{> spinner}}
<table class="archetypes">
    <thead>
        <tr>
            <th data-lockedorder="asc" class="archetype-name-header">Archetype</th>
            {{^is_matchups}}
                <th class="n" data-breakpoints="xs" data-sortInitialOrder="desc"># Decks</th>
            {{/is_matchups}}
            <th data-sortInitialOrder="desc">Record</th>
            <th class="n" data-breakpoints="xs" data-sortInitialOrder="desc">Win %</th>
            {{^is_matchups}}<th class="n" data-breakpoints="xs sm md" data-sortInitialOrder="desc">①</th>{{/is_matchups}}
            {{^is_matchups}}<th class="n" data-breakpoints="xs sm md" data-sortInitialOrder="desc">⑧</th>{{/is_matchups}}
            {{^is_matchups}}<th class="n" data-breakpoints="xs sm md" data-sortInitialOrder="desc">5-0s</th>{{/is_matchups}}
            {{! Empty column to hold the toggle when footable kicks in.}}
            <td></td>
        </tr>
    </thead>
    <tbody>
        {{#roots}}
            {{#archetype_tree}}
                {{^hide_archetype}}
                    <tr class="archetype archetype-{{depth}}{{#current}} current{{/current}}">
                        <td data-sort="{{sort}}" class="primary initial"><a href="{{url}}">{{name}}</a></td>
                        {{^is_matchups}}
                            <td class="n">{{all_num_decks}}</td>
                        {{/is_matchups}}
                        <td class="n">{{#all_show_record}}{{all_wins}}–{{all_losses}}{{#all_draws}}–{{all_draws}}{{/all_draws}}{{/all_show_record}}</td>
                        <td class="n">{{#all_show_record}}{{all_win_percent}}{{/all_show_record}}</td>
                        {{^is_matchups}}<td class="n">{{#all_tournament_top8s}}{{all_tournament_wins}}{{/all_tournament_top8s}}</td>{{/is_matchups}}
                        {{^is_matchups}}<td class="n">{{#all_tournament_top8s}}{{all_tournament_top8s}}{{/all_tournament_top8s}}</td>{{/is_matchups}}
                        {{^is_matchups}}<td class="n">{{#all_perfect_runs}}{{all_perfect_runs}}{{/all_perfect_runs}}</td>{{/is_matchups}}
                        {{! Empty column to hold the toggle when footable kicks in.}}
                        <td></td>
                    </tr>
                {{/hide_archetype}}
            {{/archetype_tree}}
        {{/roots}}
    </tbody>
</table>
