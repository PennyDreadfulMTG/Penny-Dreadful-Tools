{{> banner}}
<section>
    <img src="{{img_url}}" alt="{{name}}" class="card-img {{card_img_class}}">
    {{#bugs}}
        <p class="bug-desc {{card_img_class}}"><b>{{classification}} bug</b> {{description}}</p>
    {{/bugs}}
</section>
{{#played_competitively}}
    <section>
        <h2>Record</h2>
        {{> spinner}}
        <table>
            <thead>
                <tr>
                    <th># Decks</th>
                    <th>Record</th>
                    <th data-breakpoints="xs sm">Win %</th>
                    {{! Empty column to hold the toggle when footable kicks in.}}
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <td class="n">{{all_num_decks}}</td>
                <td class="n">{{#all_show_record}}{{all_wins}}–{{all_losses}}{{#all_draws}}–{{all_draws}}{{/all_draws}}{{/all_show_record}}</td>
                <td class="n">{{all_win_percent}}</td>
                {{! Empty column to hold the toggle when footable kicks in.}}
                <td></td>
            </tbody>
        </table>
    </section>
{{/played_competitively}}
{{#has_most_common_cards}}
    <section>
        <h2>Most Commonly Played With</h2>
        <ul>
            {{#most_common_cards}}<li>{{> singlecard}}</li>{{/most_common_cards}}
        </ul>
    </section>
{{/has_most_common_cards}}
{{> legal}}
{{#has_decks}}
    <section>
        <h2>Decks containing {{name}}</h2>
        {{> decktable}}
    </section>
{{/has_decks}}
