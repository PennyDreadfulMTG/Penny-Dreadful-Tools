<section>
    <h2>Decks</h2>
    {{> livedecktable}}
    {{#sponsor_name}}<p>Sponsored by {{sponsor_name}}</p>{{/sponsor_name}}
</section>
{{#has_leaderboard}}
    <section>
        <h2>Leaderboard</h2>
        <table class="with-marginalia">
            <thead>
                <tr>
                    <td class="marginalia"></td>
                    <th>Person</th>
                    <th data-sortInitialOrder="desc">Points</th>
                </tr>
            </thead>
            <tbody>
                {{#leaderboard}}
                    <tr class="pos-{{pos}}">
                        <td class="n marginalia">
                            {{position}}
                        </td>
                        <td><a href="{{url}}" class="person">{{person}}</a></td>
                        <td class="n">{{points}}</td>
                    </tr>
                {{/leaderboard}}
            </tbody>
        </table>
    </section>
{{/has_leaderboard}}
