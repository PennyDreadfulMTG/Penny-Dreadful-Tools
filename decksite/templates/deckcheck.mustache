<h1>{{page_title}}</h1>
<section>
    <form method="post">
        {{#person_id}}
            <div>
                <label for="name">{{TT_YOUR_RECENT_DECKS}}</label>
                    <select id="signup_recent_decks">
                        <option value="">{{TT_CHOOSE_DECK}}</option>
                        {{#form.recent_decks}}
                            <option value="" data="{{list}}">{{name}}</option>
                        {{/form.recent_decks}}
                    </select>
            </div>
        {{/person_id}}
        <div>
            <label for="decklist">{{TT_DECKLIST}}</label>
            <textarea {{#form.errors.decklist}}class="error"{{/form.errors.decklist}} name="decklist" id="decklist">{{form.decklist}}</textarea>
            <label class="uploader-label" for="uploader">{{TT_ENTER_OR_UPLOAD}} <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg></label>
            <input class="uploader" id="uploader" type="file">
            {{#form.validation_ok_message}}<div class="validation-ok">{{form.validation_ok_message}}</div>{{/form.validation_ok_message}}
            {{> deckerrors}}
        </div>
        <button type="submit">{{TT_DECKCHECK}}</button>
    </form>
</section>
<section>
    {{> contact}}
</section>
