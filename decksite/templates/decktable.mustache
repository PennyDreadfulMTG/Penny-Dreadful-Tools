{{> spinner}}
<table class="with-marginalia">
    <thead>
        <tr>
            <th data-breakpoints="xs" class="marginalia" data-sortInitialOrder="desc">⇅</th>
            <th data-breakpoints="xs sm">Colors</th>
            <th>Name</th>
            {{^hide_person}}
                <th data-breakpoints="xs">Person</th>
            {{/hide_person}}
            {{^hide_source}}
                <th data-breakpoints="xs sm md">Source</th>
            {{/hide_source}}
            <th class="n" data-sortInitialOrder="desc">Record</th>
            {{#show_omw}}
                <th data-breakpoints="xs sm md" title="Opponent's Match Win" data-sortInitialOrder="desc">OMW</th>
            {{/show_omw}}
            {{^hide_top8}}
                <th class="c" data-breakpoints="xs sm">Top 8</th>
            {{/hide_top8}}
            <th data-breakpoints="xs" data-sortInitialOrder="desc">Date</th>
            {{#has_similar}}
                <th data-breakpoints="xs sm">Similarity</th>
            {{/has_similar}}
            <th data-breakpoints="xs sm md">Season</th>
            {{! Empty column to hold the toggle when footable kicks in. }}
            <td></td>
        </tr>
    </thead>
    <tbody>
        {{#active_runs}}
            <tr>
                <td class="marginalia"><span class="active" title="Active in the current league">⊕</span></td>
                <td></td>
                <td>{{active_runs}}</td>
            </tr>
        {{/active_runs}}
        {{#decks}}
            {{> deckrow}}
        {{/decks}}
    </tbody>
</table>
