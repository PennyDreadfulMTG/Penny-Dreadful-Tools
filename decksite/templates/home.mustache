{{#deck_tables}}
    <section>
        <h2>{{title}}</h2>
        {{> decktable}}
        <p><a href="{{url}}">{{link_text}}</a></p>
    </section>
{{/deck_tables}}
{{#has_top_cards}}
    <section>
        <h2>{{_ Top Cards}}</h2>
        <table>
            <thead>
                <th>Card</th>
                <th># Decks</th>
                <th>Record</th>
                <th>Win %</th>
            </thead>
            <tbody>
                {{#top_cards}}
                    <tr>
                        <td>{{> singlecard}}</td>
                        <td class="n">{{num_decks}}</td>
                        <td class="n">{{wins}}–{{losses}}{{#draws}}–{{draws}}{{/draws}}</td>
                        <td class="n">{{win_percent}}</td>
                    </tr>
                {{/top_cards}}
            </tbody>
        </table>
        <p><a href="{{cards_url}}">{{_ More cards…}}</a></p>
    </section>
{{/has_top_cards}}
<section>
    <h2>{{_ Tournaments}}</h2>
    {{> tournamentcalendar}}
    {{#kick_off_date}}
        <p><a href="{{kick_off_url}}">The Season {{season_id}} Kick Off</a> is on {{kick_off_date}}.</p>
    {{/kick_off_date}}
    {{#pd500_date}}
        <p><a href="{{pd500_url}}">The Penny Dreadful 500</a> is on {{pd500_date}}.</p>
    {{/pd500_date}}
</section>
{{#has_news}}
    {{> news}}
{{/has_news}}
<section class="rotation">
    <h2>Season {{season_id}}</h2>
    <p>Season {{season_id}} began {{season_start_display}} and ends {{season_end_display}}.</p>
    <ul>
        <li><a href="{{scryfall_url}}">Legal cards (scryfall)</a></li>
        <li><a href="{{legal_cards_url}}">Legal cards (text)</a></li>
    </ul>
    {{#in_rotation}}
        <p><a href="{{rotation_url}}">{{rotation_msg}}</a></p>
    {{/in_rotation}}
</section>
<section class="stats">
    <h2>Community Stats</h2>
    {{#community_stats}}
        <p>{{header}}</p>
        <ul>
            {{#stats}}
                <li>{{text}}</li>
            {{/stats}}
        </ul>
    {{/community_stats}}
</section>
