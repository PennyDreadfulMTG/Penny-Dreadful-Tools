{{#show_matches}}
    <section>
        <p>Before you retire your deck, please check that all of your matches have been reported correctly.</p>
        {{#has_matches}}
            {{> deckmatches}}
        {{/has_matches}}
        {{^has_matches}}
            <p>This deck has no reported matches.</p>
        {{/has_matches}}
        <p><a href="{{report_url}}">Report a Match</a></p>
{{/show_matches}}
<section>
    <form method="post">
        <div>
            <label for="entry">Deck to Retire</label>
            <select class="{{#form.errors.entry}}error {{/form.errors.entry}}deckselect" name="entry" id="entry">
                <option value="">Chooseâ€¦</option>
                {{#form.entry_options}}
                    <option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{text}}</option>
                {{/form.entry_options}}
            </select>
            <div class="error">{{form.errors.entry}}</div>
        </div>
        <button type="submit">Retire</button>
        <div class="logout">{{_ Not you?}} <a href="{{logout_url}}">{{_ Log out}}</a></div>
    </form>
</section>
<section>
    {{> contact}}
</section>
