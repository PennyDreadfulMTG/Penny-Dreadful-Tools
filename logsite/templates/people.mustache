<section>
    <h1>People</h1>
    {{> spinner}}
    <table class="with-marginalia">
        <thead>
            <tr>
                <th data-breakpoints="xs" class="marginalia" data-sortInitialOrder="desc">⇅</th>
                <th>Name</th>
                <th># of Matches</th>
                <th>Favorite Format</th>
                {{! Empty column to hold the toggle when footable kicks in. }}
                <td></td>
            </tr>
        </thead>
        <tbody>
            {{#people}}
                <tr>
                    <td class="marginalia">{{{stars_safe}}}</td>
                    <td><a href="{{url}}">{{name}}</a></td>
                    <td>{{num_matches}}</td>
                    <td>{{fav_format}}</td>
                    {{! Empty column to hold the toggle when footable kicks in.}}
                    <td></td>
                </tr>
            {{/people}}
        </tbody>
    </table>

    {{#has_prev}}
        <a href="{{prev_url}}">← Previous Page</a>
    {{/has_prev}}
    {{#has_next}}
        <a href="{{next_url}}">Next Page →</a>
    {{/has_next}}
</section>
